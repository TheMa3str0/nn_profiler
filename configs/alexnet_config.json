{
    "network": {
        "device": "gpu",
        "input_shape": [3, 224, 224],
        "mode": "inference",

        "inference_params": {
            "no_inferences": 100
        },

        "training_params": {
            "optimizer": "adam",
            "learning_rate": 0.001,
            "loss_function": "categorical_crossentropy",
            "batch_size": 32,
            "epochs": 10,
            "num_samples": 500
        },

        "task": "classification",
        "layers": [
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [3, 96],
                "conv_params": {
                    "kernel_size": [11, 11],
                    "stride": [4, 4],
                    "padding": 0
                }
            },
            {
                "type": "maxpool2d",
                "maxpool_params": {
                    "kernel_size": [3, 3],
                    "stride": [2, 2],
                    "padding": 0
                }
            },
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [96, 256],
                "conv_params": {
                    "kernel_size": [5, 5],
                    "stride": [1, 1],
                    "padding": 2
                }
            },
            {
                "type": "maxpool2d",
                "maxpool_params": {
                    "kernel_size": [3, 3],
                    "stride": [2, 2],
                    "padding": 0
                }
            },
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [256, 384],
                "conv_params": {
                    "kernel_size": [3, 3],
                    "stride": [1, 1],
                    "padding": 1
                }
            },
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [384, 384],
                "conv_params": {
                    "kernel_size": [3, 3],
                    "stride": [1, 1],
                    "padding": 1
                }
            },
            {
                "type": "conv2d",
                "activation_function": "relu",
                "io_shape": [384, 256],
                "conv_params": {
                    "kernel_size": [3, 3],
                    "stride": [1, 1],
                    "padding": 1
                }
            },
            {
                "type": "maxpool2d",
                "maxpool_params": {
                    "kernel_size": [3, 3],
                    "stride": [2, 2],
                    "padding": 0
                }
            },
            {
                "type": "flatten"
            },
            {
                "type": "dense",
                "activation_function": "relu",
                "io_shape": [6400, 4096]
            },
            {
                "type": "dropout",
                "dropout_params": {
                    "p": 0.5,
                    "inplace": false
                }
            },
            {
                "type": "dense",
                "activation_function": "relu",
                "io_shape": [4096, 4096]
            },
            {
                "type": "dropout",
                "dropout_params": {
                    "p": 0.5,
                    "inplace": false
                }
            },
            {
                "type": "dense",
                "io_shape": [4096, 1000]
            }
        ]
    }
}
